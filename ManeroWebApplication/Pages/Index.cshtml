@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}

<section class="offer-section">
	<div class="container offer-container">
		<div class="offer-text">
			<h2>Take 50% off</h2>
			<p>on selected items</p>
			<a href="/Products/SalesProducts" class="btn-sales">Shop now</a>
		</div>
	</div>
</section>

<hr />

<!-- Assuming you're inside a loop that iterates through BestSellers -->
<!-- För bästsäljare -->
<section class="product-section">
	<div class="container product-container">
		<div class="product-container-header">
			<h1>best Sellers</h1>
			<a asp-page="/Products/FeaturedProducts">View All ></a>
		</div>
		<div class="product-container-items">
			@foreach (var product in Model.BestSellers)
			{
				<partial name="_ProductTilePartial" model="product" />
			}
		</div>
	</div>
</section>


<!-- För utvalda produkter -->
<section class="product-section">
	<div class="container product-container">
		<div class="product-container-header">
			<h1>Featured Products</h1>
			<a asp-page="/Products/FeaturedProducts">View All ></a>
		</div>
		<div class="product-container-items">
			@foreach (var product in Model.FeaturedProducts)
			{
				<partial name="_ProductTilePartial" model="product" />
			}
		</div>
	</div>
</section>
