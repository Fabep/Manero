@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<section class="product-section">
    <div class="container product-container">

        <div class="product-container-header">
            
            <h1>Best Sellers</h1>
           
            <a asp-page="/Products">
                View All >
            </a>

        </div>

        <div class="product-container-items">
            @foreach (var product in Model.BestSellers.Take(4))
            {
                <partial name="_ProductTilePartial" model="product" />
            }

        </div>

    </div>
</section>






<section class="featured">
	<div class="container">
		<div class="d-flex justify-content-between align-items-center">
			<h1>Featured Products</h1>
			<a href="~/Product/FeaturedProducts" class="btn btn-primary">View all</a>


		</div>
		<div class="product-container">
			@foreach (var product in Model.FeaturedProducts.Take(4))
			{
				<partial name="_ProductTilePartial" model="product" />
			}
		</div>
	</div>
</section>








