@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<section class="best-sellers">
    <div class="container">
        <h1>Best Sellers</h1>
        <div class="product-container">
            @foreach (var product in Model.BestSellers.Take(3))
            {
                <partial name="_DeviceTilePartial" model="product" />
            }

        </div>
    </div>
</section>


