@model CategoriesViewModel
@{
}
<section class="categories">
    <div class="container">
        <div class="main-categories-nav" id="mc-btns">
            @foreach (var primaryCategory in Model.PrimaryCategories)
            {
                <div class="main-categories-nav-box">
                    @if (primaryCategory.PrimaryCategoryId == Model.SelectedPrimaryCategory)
                    {
                        <button class="main-categories-nav-box-btn active">@primaryCategory.PrimaryCategoryName</button>
                    }
                    else
                    {
                        <button class="main-categories-nav-box-btn">@primaryCategory.PrimaryCategoryName</button>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Grid Section -->
    <div class="grid-container">
        @foreach (var subCategory in Model.SubCategories)
        {
            <partial name="_CategoriesPartial" model="subCategory" />
        }

    </div>
</section>
