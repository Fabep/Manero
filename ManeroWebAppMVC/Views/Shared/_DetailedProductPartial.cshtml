@model DataAccess.Models.Product;

<div class="wishList-product">
	<div class="wl-promotion">
		@if (Model.Promotion != null)
		{
			<div class="wl-sale-badge">Sale</div>
		}
	</div>
	<div class="wl-product-image">

		<a href="@Url.Action("Article", "Products", new { n = @Model.ProductName })">
			<img src="@Model.ImageUrl" alt="@Model.ProductName" />
		</a>
		<div class="wl-product-buttons">
			<i class="fa-regular fa-heart heart"></i>
			<i class="fa-solid fa-bag-shopping buy"></i>
		</div>
	</div>
	<div class="wl-product-rating">
		<div>
			@for (var i = 0; i < 5; i++)
			{
				if (Model.Rating > i)
				{
					<i class="fa-solid fa-star"></i>
				}
				else
				{
					<i class="fa-regular fa-star"></i>
				}
			}
		</div>
	</div>
	<div class="wl-product-name">
		@Model.ProductName
	</div>
	<div class="wl-product-price">
		@if (Model.Promotion != null)
		{
			var discountPrice = Model.ProductPrice * (1 - Model.Promotion.DiscountRate);
			var formattedDiscountPrice = discountPrice.ToString("0.0");

			<span class="wl-product-price-old">$@Model.ProductPrice.ToString("0.00")</span>
			<span class="wl-product-price-sales">$@formattedDiscountPrice</span>
		}
		else
		{
			<span class="wl-product-price-old">$@Model.ProductPrice.ToString("0.00")</span>
		}
	</div>



</div>
