@model bool
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>

<body>
    <div id="confirmation-container">
        <div class="order-confirmation @(Model ? "success" : "failed")">
            <i class="fas fa-@(Model ? "check-circle" : "times-circle")"></i>
            <h1>@(Model ? "Thank you for your order!" : "Sorry! Your order failed")</h1>
            <p>@(Model ? "Your order will be delivered in time." : "Something went wrong. Please try again.")</p>
            <div class="button-container">
                @if (Model)
                {
                    <button type="button" onclick="location.href='@Url.Action("OrderHistoryPage", "Profile")'">Show order</button>
                    <button type="button" onclick="location.href='@Url.Action("Index", "Home")'">Keep shopping</button>
                }
                else
                {
                    <button type="button" onclick="window.history.back()">Try again</button>
                    <button type="button" onclick="location.href='@Url.Action("MyProfilePage", "Profile")'">View my profile</button>
                }
            </div>
        </div>
    </div>
</body>