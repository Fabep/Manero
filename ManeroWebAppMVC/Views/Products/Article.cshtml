@model ArticleViewModel
@{
}

@* Container *@
<section class="product-page-container">
    @* Images *@
    <div class="product-image">
        <img src="~/Images/t-shirt.png" />
    </div>
    <div class="image-slide-buttons"></div>

    @* Product Name *@
    <div class="product-name">
        <h3 class="m-0"><b>@Model.Product.ProductName</b></h3>
        <i class="fa-regular fa-heart heart"></i>
    </div>
    @* Stars *@
    <div class="product-star-rating">
        @for (var i = 0; i < 5; i++)
        {
            if (Model.Product.Rating > i)
            {
                <i class="fa-solid fa-star"></i>
            }
            else
            {
                <i class="fa-regular fa-star"></i>
            }
        }
    </div>

    @* Price *@
    <div class="product-price">
        <h4 class="m-0">$@Model.Product.ProductPrice</h4>
        <div class="product-amount">
            <button class="amount-button" onclick="remove()">-</button>
            <div id="current-amount">@Model.CurrentAmount</div>
            <button class="amount-button" onclick="add()">+</button>
        </div>
    </div>

    @* Sizes *@
    @* <partial name="_SizeButtonsPartial" model="Model.Sizes"/> *@
    <div class="product-buttons">
        <h5 class="product-text-part">Size</h5>
        <div class="horizontal-button-container" id="size-buttons">
            @foreach (var size in Model.Sizes)
            {
                <a data-size="@size" class="size-button" asp-controller="Products" asp-action="Article" asp-route-n="@Model.Product.ProductName" asp-route-selectedSize="@size.SizeType" >@size.SizeType</a>
            }
        </div>
    </div>

    @* Colors *@
    @* <partial name="_ColorButtonsPartial" model="Model.Colors"/> *@
    <div class="product-buttons">
        <h5 class="product-text-part">Color</h5>
        <div class="horizontal-button-container" id="color-buttons">
            @foreach (var color in Model.Colors)
            {
                if (color.HexColor is null)
                {
                    <a asp-controller="Products" asp-action="Article" asp-route-n="@Model.Product.ProductName" asp-route-selectedColor="@color.ColorName" class="color-button" data-color="@color.ColorName" style="background-color:@color.ColorName"></a>
                }
                else
                {
                    <a asp-controller="Products" asp-action="Article" asp-route-n="@Model.Product.ProductName" asp-route-selectedColor="@color.ColorName" class="color-button" data-color="@color.ColorName" style="background-color:@color.HexColor"></a>
                }
            }
        </div>
    </div>


    @* Description *@
    <div class="product-description">
        <h5 class="product-text-part">Description</h5>
        <p>@Model.Product.ProductDescription</p>
    </div>

    @* Add to cart *@
    <button class="add-to-cart-button">
        Add To Cart
    </button>

    @* Reviews *@
    <div class="product-reviews">
        <div class="review-top">
            <h4>Reviews (@Model.ReviewCount)</h4>
            <a asp-page="/Products/Article/Reviews" class="view-reviews-button">View all ></a>
        </div>
        <div class="review-box">
            <img class="picture" src="" alt="Profile picture" />
        </div>
    </div>
</section>